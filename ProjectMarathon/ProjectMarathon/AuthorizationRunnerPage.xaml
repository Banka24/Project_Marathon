<Page x:Class="ProjectMarathon.AuthorizationRunnerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjectMarathon"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthorizationRunnerPage">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="250"/>
            <RowDefinition Height="250"/>
        </Grid.RowDefinitions>
        <TextBlock Style="{StaticResource MainText}"
                   Text="Форма авторизации"
                   Margin="0,20,0,0"/>
        <TextBlock Style="{StaticResource DlcText}"
                   Text="Пожалуйста, авторизуйтесь в системе, используя ваш адрес электронной почты"
                   FontSize="18"
                   Margin="0,40,0,0"/>
        <TextBlock Style="{StaticResource DlcText}"
                   FontSize="18"
                   Text="и пароль."
                   Margin="0,60,0,0"/>
        <TextBlock Style="{StaticResource DlcText}"
                   FontSize="18"
                   Text="Email:"
                   Grid.RowSpan="2"
                   Margin="-200,180,0,0"/>
        <TextBlock Style="{StaticResource DlcText}"
                   FontSize="18"
                   Text="Password:"
                   Grid.RowSpan="2"
                   Margin="-225,240,0,0"/>
        <PasswordBox Grid.RowSpan="2"
                     Width="100"
                     Height="20"/>
        <TextBox Width="100"
                 Height="20"
                 Margin="0,131,0,0"/>
        <Button Grid.RowSpan="2"
                Style="{StaticResource SmallButton}"
                Content="Login"
                Margin="-150,80,0,0"
                Click="Confirm"/>
        <Button Grid.RowSpan="2"
                Style="{StaticResource SmallButton}"
                Content="Cancel"
                Margin="150,80,0,0"
                Click="Cancel"/>
        <Frame Name="Navigation"
               Grid.RowSpan="3" Navigated="Navigation_Navigated"/>
    </Grid>
</Page>
